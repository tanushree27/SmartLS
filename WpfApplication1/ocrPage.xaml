<Page x:Class="WpfApplication1.ocrPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ocrPage">

    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Border BorderBrush="#FF0B232F" BorderThickness="10" />
            <StackPanel>
                <TextBlock Text="OCR Result" Foreground="White" FontWeight="ExtraLight" FontFamily="lato" FontSize="50" Margin="0,30,0,50" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        
                    <TextBox Name="ResultTextBlock" FontFamily="Times new roman" Opacity=".8" FontSize="20" VerticalAlignment="Top" Height="380" Width="730" HorizontalAlignment="Center"/>
              
             </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>
