<Page x:Class="WpfApplication1.Resultpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Resultpage">
    
    <ScrollViewer>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="#FF0B232F" BorderThickness="10" Grid.RowSpan="2" />

            <TextBlock Text="SmartLS" HorizontalAlignment="Center" FontSize="50" VerticalAlignment="Center" FontFamily="lato" FontWeight="UltraLight" Foreground="White" Margin="0,50,0,10" />

           
            <StackPanel Name="mainStack"  Grid.Row="1">
                <TextBlock Name="queryBlock" FontSize="20" Foreground="White"  Margin="20,10,10,0"/>
                <TextBlock Name="count" FontSize="10" Foreground="White"  Margin="20,5,10,0" />
            </StackPanel>
            
    </Grid>
    </ScrollViewer>
</Page>
